<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape>
            <solid android:color="@color/grey" /> <!-- Shadow color -->
            <corners android:radius="140dp" /> <!-- Adjust the radius as per your requirement -->
        </shape>
    </item>
    <!-- Actual Shape -->
    <item android:top="0dp" android:bottom="0dp"> <!-- Adjust shadow offset as needed -->
        <shape>
            <corners android:radius="140dp" />
            <solid android:color="@color/white" />
            />
        </shape>
    </item>
</layer-list>
