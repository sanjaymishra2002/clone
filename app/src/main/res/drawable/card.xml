<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape>
            <solid android:color="#808080" /> <!-- Shadow color -->
            <corners android:radius="8dp" /> <!-- Adjust the radius as per your requirement -->
        </shape>
    </item>
    <!-- Actual Shape -->
    <item android:top="1dp" android:bottom="1dp"> <!-- Adjust shadow offset as needed -->
        <shape>
            <solid android:color="@color/white" />
          />
        </shape>
    </item>
</layer-list>
